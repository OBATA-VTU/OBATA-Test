rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // TEMPORARY: Allow public access to service catalogs to bootstrap a new project
    match /synced_services/{id} {
      allow read, write: if true;
    }

    match /services/{id} {
      allow read, write: if true;
    }

    match /pricing/{id} {
      allow read, write: if true;
    }

    // Standard Auth-based rules for user data
    match /users/{uid} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /transactions/{id} {
      allow read, write: if request.auth != null;
    }

    match /settings/{id} {
      allow read: if true;
      allow write: if true;
    }

    match /notifications/{id} {
      allow read: if true;
      allow write: if true;
    }
  }
}