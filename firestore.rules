rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Global helper: Is the user logged in?
    function signedIn() {
      return request.auth != null;
    }

    // Node Sync & Pricing Collections
    // Explicitly permissive for authenticated users to ensure sync works during testing
    match /synced_services/{id} {
      allow read, write: if signedIn();
    }

    match /services/{id} {
      allow read, write: if signedIn();
    }

    match /pricing/{id} {
      allow read, write: if signedIn();
    }

    // Users & Metadata
    match /users/{uid} {
      allow read: if signedIn();
      allow create: if signedIn() && request.auth.uid == uid;
      allow update: if signedIn() && (request.auth.uid == uid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true);
    }

    // Financial Records
    match /transactions/{id} {
      allow read, list: if signedIn() && (resource.data.userId == request.auth.uid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true);
      allow create: if signedIn();
      allow update, delete: if signedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // System Config
    match /settings/{id} {
      allow read: if true;
      allow write: if signedIn();
    }

    match /notifications/{id} {
      allow read, list: if signedIn();
      allow write: if signedIn();
    }
  }
}